<h1>Login</h1>
<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="form-group">
    Пароль<br />
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Войти", class: "btn btn-primary" %>

<% end %>
