<%= form_for(@apartment) do |f| %>
<% if @apartment.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@apartment.errors.count, "error") %>
        prohibited this apartment from being saved:</h2>

    <ul>
        <% @apartment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
</div>
<div class="field">
    <%= f.label :floor %><br>
    <%= f.number_field :floor %>
</div>
<div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
</div>
<div class="field">
    <%= f.label :rooms %><br>
    <%= f.number_field :rooms %>
</div>
<div class="field">
    <%= f.label :area %><br>
    <%= f.text_field :area %>
</div>
<div class="field">
    <%= f.label 'Address' %><br>
    <%= text_field_tag 'address' %>
</div>
<div id="address-details">
    <%= f.hidden_field :latitude,'data-geo':"lat" %>
    <%= f.hidden_field :longitude,'data-geo':"lng" %>
</div>
<div class="actions">
    <%= f.submit %>
</div>
<% end %>
